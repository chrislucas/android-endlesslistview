<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="4sp">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:columnOrderPreserved="true"
        android:orientation="vertical"
        android:useDefaultMargins="true">

        <TextView
            android:id="@+id/title_info"
            style="@style/Info.General.Title"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:text="@string/example_title"
            />

        <TextView
            android:id="@+id/subtitle_info"
            style="@style/Info.General.Subtitle"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:text="@string/example_title"
            />

        <TextView
            android:id="@+id/date_info"
            style="@style/Info.General.Text"
            android:layout_row="2"
            android:layout_column="0"
            android:text="@string/example_date"
            />

        <TextView
            android:id="@+id/time_ago"
            style="@style/Info.General.Text"
            android:layout_row="2"
            android:layout_column="1"
            android:text="@string/example_time_ago"
            />

        <TextView
            android:id="@+id/text_info"
            style="@style/Info.General.Text"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:text="@string/example_text_info"
            />

        <!--android:src="@drawable/erro_placeholder1" -->
        <ImageView
            android:id="@+id/image_info"
            style="@style/Info.ImageView"
            android:contentDescription="@string/descrition_image_default"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_columnSpan="2"
            />

    </GridLayout>

</android.support.v7.widget.CardView>