<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="imagineapps.testrequestafterscroll.MainActivity">

    <LinearLayout
        android:layout_weight="0.15"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/edittext_search"
            android:layout_weight="0.7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:hint="@string/type_keyword"
            tools:ignore="NestedWeights" />
        <Button
            android:id="@+id/button_search"
            android:layout_weight="0.3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/search"
            android:onClick="search"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.85"
        android:orientation="vertical">
        <TextView
            android:id="@+id/quantity_data"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15"
            android:text="@string/sample_text_quantity_data"
            style="@style/Info.General.Title.Center"
            android:layout_gravity="center_vertical"
            tools:ignore="NestedWeights" />
        <ListView
            android:layout_weight="0.85"
            android:id="@+id/list_data"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
    </LinearLayout>


</LinearLayout>
